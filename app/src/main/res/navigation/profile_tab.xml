<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_tab"
    app:startDestination="@id/navigation_profile_not_logged_in">
    <fragment
        android:id="@+id/navigation_profile_logged_in"
        android:name="com.example.cinematv_mvvm.ui.profile.ProfileFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_profile_logged_in" />

    <fragment
        android:id="@+id/navigation_profile_not_logged_in"
        android:name="com.example.cinematv_mvvm.ui.profile.ProfileFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_profile_not_logged_in">

        <action
            android:id="@+id/to_login"
            app:destination="@id/login"/>

    </fragment>


    <fragment
        android:id="@+id/login"
        android:name="com.example.cinematv_mvvm.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login_page"/>
</navigation>